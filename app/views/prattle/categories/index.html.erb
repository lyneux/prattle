<h1>Forums</h1>

<% @categories.each do |category| %>
  <h2><%= link_to category.name, category %></h2>

  <%= link_to 'New Category', new_category_path, class: "btn btn-sm btn-primary" %>

  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>Forum</th>
        <th>Topics</th>
        <th>Posts</th>
        <th>Views</th>
      </tr>
    </thead>
    <tbody>
      <% category.forums.each do |forum| %>
        <tr>
          <td><h3><%= link_to forum.name, category_forum_path(category, forum) %></h3><%= forum.description %></td>
          <td><%= forum.topics.count %></td>
          <td><%= forum.posts.count %></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>
