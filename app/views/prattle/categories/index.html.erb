<h1><%= link_to "Forums", prattle.root_path %></h1>
<% if prattle_admin? %>
  <%= link_to 'New Category', new_category_path, class: "btn btn-sm btn-danger" %>
<% end %>

<% @categories.each do |category| %>
  <h2><%= link_to category.name, category %></h2>

  <table class="table table-striped table-condensed">
    <tbody>
      <% category.forums.each do |forum| %>
        <tr>
          <td><h3><%= link_to forum.name, category_forum_path(category, forum) %></h3><%= forum.description %></td>
          <td>
              <span class="badge"><%= forum.topics.count %></span> topics<br/>
              <span class="badge"><%= forum.posts.count %></span> posts
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>
