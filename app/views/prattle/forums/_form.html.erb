<%= form_for([@forum.category, @forum],  :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
<% if @forum.errors.any? %>
  <div id="errorExplanation" class="alert alert-danger" style="padding-top: 0px;">
    <h3><%= pluralize(@forum.errors.count, "error") %> prohibited this forum from being saved:</h3>
    <ul>
      <% @forum.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-xs-4 control-label"  %>
    <div class="col-xs-8"><%= f.text_field :name, class: "form-control" %></div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "col-xs-4 control-label"  %>
    <div class="col-xs-8"><%= f.text_area :description, class: "form-control" %></div>
  </div>

    <%= f.submit class: "btn btn-sm btn-primary" %>

    <%= link_to_if @forum.new_record?, "Cancel", categories_path(@forum.category), class: "btn btn-sm btn-default" do
          link_to "Cancel", category_forums_path(@forum), class: "btn btn-sm btn-default"
        end
    %>

<% end %>